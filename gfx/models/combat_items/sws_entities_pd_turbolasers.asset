	state = { name = "idle" state_time = 7 looping = no
		event = { time = 0 particle = "sws_red_turbolaser_small_muzzle_particle" keep_particle = yes sound = { soundeffect = sws_soundeffect_pd_turbolaser } }
		event = { trigger_once = yes sound = { soundeffect = "sws_soundeffect_pd_turbolaser_distance" } } 
	}
}

entity = {
	name = "sws_pd_turbolaser_entity_red"
